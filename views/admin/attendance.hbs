<!-- PAGE CONTAINER-->
<div class="page-container2">
    <!-- MAIN CONTENT -->
    <div class="main-content">
        {{!-- <div class="section__content section__content--p30"> --}}
        {{!-- <div class="container-fluid"> --}}
        {{!-- <div class="row"> --}}

        <div class="container">
            {{>default/messages}}
            {{!-- table here --}}
            <table class="table table-bordered">
                <thead class="bg-dark text-center">
                    <tr class="text-white">
                        <th>Date</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Institution</th>
                        <th>View Application Letter</th>
                        <th>Approved</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    {{#each internshipApplications}}
                    <tr>
                        <td>{{date}}</td>
                        <td>{{firstName}}</td>
                        <td>{{lastName}}</td>
                        <td>{{institution}}</td>
                        <td> <a href="{{applicationLetter}}">View</a> </td>
                        <td>{{isApproved}}</td>
                        <td class="d-flex">
                            <form action="/admin/approveInternshipApplication/{{_id}}" method="POST">
                                <button type="submit" class="btn btn-success">APPROVE</button>

                            </form>
                            <form action="/admin/deleteInternshipApplication/{{id}}?newMethod=DELETE" method="POST">
                                <button class="btn btn-danger" type="submit">DELETE</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
            {{!-- table Ends --}}
        </div>