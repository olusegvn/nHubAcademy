<!-- reset body -->
<div class="container">
<div class="row col-10 mx-auto my-4 pl-none" style="background-color: white">
    <div class="col-lg-6 ml-none mb-5">
        <img class="img img-responsive" id="img" style="height: 100%; width:100%;"
            src="/img/about_us/Orange_lock.svg.png" alt="">
    </div>
    <div class="col-sm-4 py-5">
        <h1 id="h1" class="display-4" style="margin-bottom: 60px">Reset your password </h1>
        <form method="POST" action="/interns/resetPassword/{{token}}">
            <div class="form-group " style="margin-bottom: 30px;">
                <label for="exampleInputEmail1">Enter new Password</label>
                <input type="password" name="password" class="form-control" id="inputPassword" aria-describedby="passwordHelp" required>
            </div>
            <div class="form-group" style="margin-bottom: 30px;">
                <label for="exampleInputPassword1">Confirm Password</label>
                <input type="password" name="confirmPassword" class="form-control" id="inputPassword1" required>
            </div>
            <button id="btn" type="submit" class="btn">Submit</button>
        </form>
    </div>
</div>
</div>